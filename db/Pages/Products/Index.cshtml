@page
@model db.Pages.Products.IndexModel
@{
}

<br>
<h2>List of Products</h2>
<a class='btn btn-primary btn-sm' href='/Products/Create'>New Product</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Producer ID</th>
            <th>Type</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listProducts)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.ProducerID</td>
                <td>@item.Type</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Products/Edit?id=@item.ProductID">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Products/Remove?id=@item.ProductID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>